{
  "name": "mimmi20/laminasviewrenderer-bootstrap-form",
  "description": "Provides a View Renderer for Laminas Forms to use with Bootstrap",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Thomas MÃ¼ller",
      "homepage": "https://github.com/mimmi20",
      "role": "Developer"
    }
  ],
  "homepage": "https://github.com/mimmi20/laminasviewrenderer-bootstrap-form",
  "support": {
    "issues": "https://github.com/mimmi20/laminasviewrenderer-bootstrap-form/issues",
    "source": "https://github.com/mimmi20/laminasviewrenderer-bootstrap-form"
  },
  "require": {
    "php": "~8.3.0 || ~8.4.0 || ~8.5.0",
    "ext-intl": "*",
    "ext-mbstring": "*",
    "laminas/laminas-form": "^3.21.0",
    "laminas/laminas-inputfilter": "^2.31.0",
    "laminas/laminas-view": "^2.36.0"
  },
  "require-dev": {
    "ext-ctype": "*",
    "ext-dom": "*",
    "ext-simplexml": "*",
    "ext-tokenizer": "*",
    "ext-xml": "*",
    "ext-xmlwriter": "*",
    "infection/infection": "^0.29.10",
    "laminas/laminas-filter": "^2.40.0",
    "laminas/laminas-i18n": "^2.29.0",
    "laminas/laminas-modulemanager": "^2.17.0",
    "laminas/laminas-servicemanager": "^3.22.1",
    "laminas/laminas-validator": "^2.64.1",
    "mimmi20/coding-standard": "^6.0.5",
    "mimmi20/laminas-form-element-group": "^4.0.0",
    "mimmi20/laminas-form-element-links": "^3.0.0",
    "mimmi20/laminas-form-element-paragraph": "^3.0.0",
    "nikic/php-parser": "^5.4.0",
    "phpstan/extension-installer": "^1.4.3",
    "phpstan/phpstan": "^2.1.1",
    "phpstan/phpstan-deprecation-rules": "^2.0.1",
    "phpstan/phpstan-phpunit": "^2.0.3",
    "phpunit/phpunit": "^11.5.2",
    "psr/container": "^1.1.2 || ^2.0.2",
    "rector/rector": "^2.0.6",
    "rector/type-perfect": "^2.0.2",
    "shipmonk/composer-dependency-analyser": "^1.8.2",
    "symfony/process": "^7.2.0",
    "symplify/phpstan-rules": "^14.2.3",
    "tomasvotruba/cognitive-complexity": "^1.0.0",
    "tomasvotruba/type-coverage": "^2.0.2",
    "tomasvotruba/unused-public": "^2.0.0"
  },
  "suggest": {
    "laminas/laminas-i18n": "Required to use the Translator",
    "laminas/laminas-servicemanager": "Required to use the navigation factories",
    "mimmi20/laminas-form-element-group": "Required to render fieldsets just for styling",
    "mimmi20/laminas-form-element-links": "Required to render links inside a form",
    "mimmi20/laminas-form-element-paragraph": "Required to render paragraphs inside a form"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Mimmi20\\LaminasView\\BootstrapForm\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Mimmi20Test\\LaminasView\\BootstrapForm\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "infection/extension-installer": true,
      "phpstan/extension-installer": true
    },
    "lock": false,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "extra": {
    "laminas": {
      "component": "Mimmi20\\LaminasView\\BootstrapForm",
      "config-provider": "Mimmi20\\LaminasView\\BootstrapForm\\ConfigProvider"
    }
  }
}
